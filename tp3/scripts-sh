#!/bin/sh

#Limpiar Pantalla
clear

#Ejecutar comando df

#df -h / Commando base
#Commando con modificaciones de texto
espacio=$(df -h / | tr -s ' ' | tail -1 | cut -d" " -f4)

#Buscar en la salida del comando anterior el espacio disponible en el
#sistema de archivos ra√≠z - Mostrar un mensaje

